
@{
    ViewData["Title"] = "About";
}

<style>
  body {
    background-color: #111; /* Dark background */
    color: white; /* White text for readability */
    margin: 0; /* Remove any extra margins */
    overflow-x: hidden; /* Prevent horizontal scroll */
}

/* About section styling */
.about-section {
    min-height: 100vh; /* Full screen height */
    display: flex;
    align-items: center; /* Center content vertically */
    padding: 50px 0;
    margin: 0 auto; /* Center horizontally */
}

.about-text {
    font-size: 1.1rem;
}

h2 {
    font-size: 3rem;
    font-weight: bold;
    width: fit-content;
    position: relative;
    text-transform: uppercase;
    margin-bottom: 5px;
}

h2:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 5px;
    left: 0;
    bottom: -3px;
    background: green;
}

.profile-img {
    max-width: 100%;
    border-radius: 10px;
}

.row {
    justify-content: space-around;
}

.about-content {
    padding-right: 40px; /* Space between text and image */
}

/* Responsive adjustments */
@@media (max-width: 992px) {
    .row {
        flex-direction: column-reverse;
        text-align: center;
    }
    .profile-img {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        border: 3px solid #6c757d;
        margin-bottom: 10px;
    }
    .about-content {
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        padding:15px;
    }
}

</style>

<section class="about-section container-fluid">
    <div class="row">
        <!-- Left Side: Text -->
        <div class="col-lg-6 about-content">
            <h2>About</h2>
            <p>Email:@Model[0].Email</p>
            <p class="about-text">@Model[0].Description</p>
            <p class="about-text">@Model[0].Description2</p>
        </div>
        <!-- Right Side: Image -->
        <div class="col-lg-4">
            <img src="~/1.png" alt="Profile Photo" class="profile-img">
        </div>
    </div>
</section>

