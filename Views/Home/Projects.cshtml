
@{
    ViewData["Title"] = "Projects";
}
<style>
    .special_heading {
        position: relative;
        left: 50%;
        transform: translateX(-50%);
        margin: 10px 0;
        border: 2px solid black;
        width: fit-content;
        transition: 0.3s;
    }

        .special_heading h2 {
            padding: 10px 20px;
        }

        .special_heading:hover {
            color: white;
            border: 2px solid white;
            transition-delay: 0.5s;
        }

        .special_heading::before, .special_heading::after {
            content: "";
            position: absolute;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #329768;
            top: 50%;
            transform: translateY(-50%);
        }

        .special_heading::before {
            right: -30px;
        }

        .special_heading::after {
            left: -30px;
        }

        .special_heading:hover::before {
            z-index: -1;
            animation: right_move 0.5s linear forwards;
        }

        .special_heading:hover::after {
            z-index: -1;
            animation: left_move 0.5s linear forwards;
        }

    @@keyframes left_move {
        50% {
            left: 0;
            width: 12px;
            height: 12px;
        }

        100% {
            border-radius: 0;
            left: 0;
            width: 50%;
            height: 100%;
        }
    }

    @@keyframes right_move {
        50% {
            right: 0;
            width: 12px;
            height: 12px;
        }

        100% {
            border-radius: 0;
            right: 0;
            width: 50%;
            height: 100%;
        }
    }

    .countiner {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(370px, 1fr));
        grid-gap: 40px;
        position: relative;
        padding-left: 15px;
        padding-right: 15px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom:40px;
        margin-top:40px
    }

        .countiner .box {
            transition: 0.3s;
            border-radius: 10px;
            background-color: #1c1c1e;
            box-shadow: 0px 2px 15px rgba(3, 237, 250, 0.4);
            overflow: hidden;
            color: white;
        }

            .countiner .box:hover {
                box-shadow: 0px 6px 25px rgba(97, 218, 251, 0.8);
                transform: translateY(-10px);
                background-color: #27272a;
            }

            .countiner .box .image {
                height: 300px; /* Ensure uniform image height */
                overflow: hidden;
            }

                .countiner .box .image img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }

    .box .text {
        padding: 15px;
        background-color: #202024;
    }

        .box .text h3 {
            font-size: 22px;
            color: #32a852;
            margin-bottom: 10px;
        }

        .box .text p {
            color: #ccc;
            font-size: 16px;
            line-height: 1.6;
        }

    .box .link {
        padding: 20px;
        border-top: 1px solid #333;
        position: relative;
        background-color: #202024;
    }

        .box .link a {
            text-decoration: none;
            color: #32a852;
            font-weight: bold;
            font-size: 18px;
            transition:0.3s;
        }

            .box .link a:hover{
                color: #61dafb;
            }

            .box .link i {
            color: #32a852;
            position: absolute;
            right: 20px;
            transition: right 0.3s;
        }

    .box:hover i {
        animation: rf_arrow 0.6s ease-in-out infinite alternate;
    }

    @@keyframes rf_arrow {
        0% {
            right: 20px;
        }

        100% {
            right: 10px;
        }
    }
</style>


<center class="special_heading">
    <h2>Projects</h2>
</center>

<div class="countiner">
    @foreach (var developer in Model)
    {
        foreach (var project in developer.DevProjects)
        {
            <div class="box">
                <div class="image">
                    <img src="~/image/@project.imgpath" alt="">
                </div>

                <div class="text">
                    <h3>@project.Name</h3>
                    <p>@project.Description</p>
                </div>

                <div class="link">
                    <a target="_blank" href="@project.ProjectLink">Project Link</a>
                    <i class="fas fa-long-arrow-alt-right"></i>
                </div>
            </div>
        }
    }
</div>